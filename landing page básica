document.addEventListener('DOMContentLoaded', () => {
  const joinBtn = document.getElementById('joinBtn');
  const connectBtn = document.getElementById('connectBtn');

  joinBtn.addEventListener('click', () => {
    joinBtn.textContent = "Conectando...";
    joinBtn.disabled = true;
    document.body.style.transition = "background 1s ease";
    document.body.style.background = "linear-gradient(135deg, #e0ccff, #ffffff)";

    setTimeout(() => {
      joinBtn.textContent = "Conectado com sucesso";
      joinBtn.classList.add('btn-glow');
    }, 2000);
  });

  connectBtn.addEventListener('click', () => {
    connectBtn.textContent = "Conectado à rede";
    connectBtn.style.background = "#4B0082";
    connectBtn.style.boxShadow = "0 0 50px rgba(102, 0, 255, 1)";
  });
});








